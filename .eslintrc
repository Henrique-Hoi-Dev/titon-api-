{
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jest": true,
        "mongo": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "ecmaFeatures": {
            "spread": true
        }
    },
    "plugins": ["prettier"],
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "semi": ["warn", "always"],
        "no-console": "off",
        "no-undef": "off",
        "accessor-pairs": [
            "error",
            {
                "getWithoutSet": true
            }
        ],
        "array-callback-return": "error",
        "consistent-return": "error",
        "no-extra-boolean-cast": "off",
        "no-mixed-spaces-and-tabs": "off",
        "prettier/prettier": [
            "error",
            {
                "tabWidth": 4,
                "useTabs": false,
                "semi": true,
                "singleQuote": true,
                "trailingComma": "none",
                "bracketSpacing": true,
                "arrowParens": "always",
                "endOfLine": "auto",
                "printWidth": 100,
                "bracketSameLine": false
            }
        ]
    }
}
